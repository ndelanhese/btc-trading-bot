# =============================================================================
# BTC Trading Bot - Environment Variables
# =============================================================================

# Database Configuration
# =============================================================================
DB_HOST=localhost
DB_PORT=5432
DB_USER=postgres
DB_PASSWORD=your_secure_password_here
DB_NAME=btc_trading_bot
DB_SSLMODE=disable

# JWT Configuration
# =============================================================================
# Change this to a secure random string in production
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production

# Server Configuration
# =============================================================================
PORT=8080

# LN Markets API Configuration (Optional - can be set via API)
# =============================================================================
# These are example values - you should configure them via the API
# LN_MARKETS_API_KEY=your_api_key_here
# LN_MARKETS_SECRET_KEY=your_secret_key_here
# LN_MARKETS_PASSPHRASE=your_passphrase_here
# LN_MARKETS_IS_TESTNET=true

# Logging Configuration
# =============================================================================
LOG_LEVEL=info
LOG_FORMAT=json

# Rate Limiting
# =============================================================================
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW=60

# WebSocket Configuration
# =============================================================================
WS_HEARTBEAT_INTERVAL=5
WS_RECONNECT_ATTEMPTS=5
WS_RECONNECT_DELAY=1000

# Trading Bot Configuration
# =============================================================================
# Default trading settings (can be overridden via API)
DEFAULT_MARGIN_PROTECTION_ENABLED=true
DEFAULT_MARGIN_ACTIVATION_DISTANCE=5.0
DEFAULT_MARGIN_NEW_LIQUIDATION_DISTANCE=10.0

DEFAULT_TAKE_PROFIT_ENABLED=true
DEFAULT_TAKE_PROFIT_DAILY_PERCENTAGE=1.0

DEFAULT_ENTRY_AUTOMATION_ENABLED=true
DEFAULT_ENTRY_AMOUNT_PER_ORDER=10.0
DEFAULT_ENTRY_MARGIN_PER_ORDER=855
DEFAULT_ENTRY_NUMBER_OF_ORDERS=9
DEFAULT_ENTRY_PRICE_VARIATION=50.0
DEFAULT_ENTRY_INITIAL_PRICE=116000.0
DEFAULT_ENTRY_TAKE_PROFIT_PERCENTAGE=0.25
DEFAULT_ENTRY_OPERATION_TYPE=buy
DEFAULT_ENTRY_LEVERAGE=10

DEFAULT_PRICE_ALERT_ENABLED=true
DEFAULT_PRICE_ALERT_MIN_PRICE=100000.0
DEFAULT_PRICE_ALERT_MAX_PRICE=120000.0
DEFAULT_PRICE_ALERT_CHECK_INTERVAL=60

# Security Configuration
# =============================================================================
# CORS settings
CORS_ALLOWED_ORIGINS=*
CORS_ALLOWED_METHODS=GET,POST,PUT,DELETE,OPTIONS
CORS_ALLOWED_HEADERS=Content-Type,Authorization

# API Security
API_TIMEOUT=30
MAX_REQUEST_SIZE=1048576

# Development/Production Mode
# =============================================================================
ENVIRONMENT=development
DEBUG=false

# Docker Configuration (if using Docker)
# =============================================================================
# Uncomment and modify if using Docker Compose
# DB_HOST=postgres
# DB_PORT=5432
# DB_USER=postgres
# DB_PASSWORD=password
# DB_NAME=btc_trading_bot
# DB_SSLMODE=disable

# =============================================================================
# Instructions:
# =============================================================================
# 1. Copy this file to .env
# 2. Update the values according to your environment
# 3. Never commit the .env file to version control
# 4. Use strong passwords and secrets in production
# 5. Consider using a secrets manager for production
# =============================================================================